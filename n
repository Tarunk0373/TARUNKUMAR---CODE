package com.scb.rwtoolbackend.repository;

import com.scb.rwtoolbackend.model.Subscription;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;
import java.util.Optional;

@Repository
public interface SubscriptionRepository extends JpaRepository<Subscription, Long> {

    // Find a specific subscription by username and group
    Optional<Subscription> findByUsernameAndGroupName(String username, String groupName);

    // Find all subscriptions for a given user
    List<Subscription> findByUsername(String username);

    // Find all subscriptions for a given group
    List<Subscription> findByGroupName(String groupName);

    // âœ… Find subscriptions by groupName AND status (correct naming)
    List<Subscription> findByGroupNameAndStatus(String groupName, String status);
}
